{% extends 'base.html.twig' %}

{% block title %}Routes index{% endblock %}

{% block body %}
    <h1>Routes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for route in routes %}
            <tr>
                <td>{{ route.id }}</td>
                <td>{{ route.name }}</td>
                <td>
                    <a href="{{ path('routes_show', {'id': route.id}) }}">show</a>
                    <a href="{{ path('routes_edit', {'id': route.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('routes_new') }}">Create new</a>
{% endblock %}

<header style="height: 50px;">
	<nav class="navbar bg-white fixed-top" style="height: 50px;">
		<div class="container">
			<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
				<div class="offcanvas-header">
					<a class="offcanvas-title chelsea-market-regular" id="offcanvasNavbarLabel" href="{{path('index')}}">munichclimbs</a>
					<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
				</div>
				<div class="offcanvas-body">
					<ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
						{% for area in getSidebarAreas() %}
							<li class="nav-item my-2">
								<a class="nav-link" data-bs-toggle="collapse" href="#{{ area.name|custom_replace }}" title="Klettergebiet {{ area.name }}" role="button" aria-expanded="false" aria-controls="{{ area.name|custom_replace }}">
									<img src="https://www.munichclimbs.de/build/images/navigationThumbs/{{ area.image }}.webp" alt="Ãœbersicht Klettergebiete {{ area.name }}." class="rounded me-3" style="width: 18px; height: 18px;" loading="lazy">
									<span class="text-truncate">{{ area.name }}</span>
								</a>
								<div class="collapse" id="{{ area.name|custom_replace }}">
									{% if area.rocks is not empty %}
										<ol class="list-group list-group-numbered" style="margin-left: 30px">
											{% for rock in area.rocks %}
												<li class="list-group-item list-group-item-action d-flex border-0 px-2">
													<a href="{{ path('show_rock', { 'areaSlug': area.slug, slug: rock.slug } ) }}" title="Link zum Klettergebiet: {{ rock.name }}" class="nav-link py-0 d-flex justify-content-between align-items-center w-100 ms-2" data-area="Konstein" data-rocks-information="{{ rock.name }}" data-banned="0">{{ rock.name }}</a>
												</li>
											{% endfor %}
										</ol>
									{% endif %}
								</div>
							</li>
						{% endfor %}
						<hr/>
						<li class="nav-item my-2">
							<a class="nav-link d-flex align-items-center" href="{{ path('app_suche') }}" title="Suche nach Erstbegeher">
								<div class="magnifier d-inline-block me-3"></div>
								<span class="text-truncate">Suche</span>
							</a>
						</li>
						<hr/>
						<li class="nav-item my-2">
							<a class="nav-link d-flex align-items-center" href="{{ path('app_login') }}" title="Login">
								<div class="user d-inline-block me-3"></div>
								<span class="text-truncate">Login</span>
							</a>
						</li>
						<hr/>
						<li class="nav-item my-2">
							<a class="nav-link d-flex align-items-center" href="{{ path('datenschutz') }}">
								<div class="chart d-inline-block me-3"></div>
								<span class="text-truncate">Datenschutz</span>
							</a>
						</li>
						<li class="nav-item my-2">
							<a class="nav-link d-flex align-items-center" href="{{ path('impressum') }}">
								<div class="chart d-inline-block me-3"></div>
								<div class="text-truncate">Impressum</div>
							</a>
						</li>
						<hr/>
						<li class="nav-item my-2">
							<div class="text-truncate">Theme Mode</div>
						</li>
						<div class="mt-2" data-controller="theme">
							<div class="segment-container border-radius-full color-light">
								<div class="segment-item" data-theme-target="system" data-action="click->theme#setSystem">System</div>
								<div class="segment-item" data-theme-target="light" data-action="click->theme#setLight">Light</div>
								<div class="segment-item" data-theme-target="dark" data-action="click->theme#setDark">Dark</div>
							</div>
						</div>
					</ul>
					
					
				</div>
			</div>
			<div class="container p-0">
				<div class="row">
					<div class="col-1 col-md-3 d-flex align-items-center">
						<button class="navbar-toggler p-0 bg-none border-0 shadow-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
							<div class="menu"></div>
						</button>
						<a href="{{path('index')}}" aria-label="Startseite munichclimbs" class="munich pb-lg-1 fs-5 ms-3 chelsea-market-regular">
							<span class="d-none d-md-inline-block">munichclimbs</span>
						</a>
					</div>
					<div class="{% if app.request.attributes.get('_route') == 'show_rock' and rocks is defined and rocks is not empty or app.request.attributes.get('_route') == 'show_rock_en' and rocks is defined and rocks is not empty %}col-9{% else %}col-9{% endif %} col-md-8">
						<form class="w-100 mb-0">
							<div data-controller="autocomplete" data-autocomplete-url-value="/search" style="position: relative;">
								<div class="d-flex">
									<!-- Left side: Search input -->
									<div class="position-relative flex-grow-1">
										<i class="fas fa-search magnifier position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%); z-index: 10; color: #6c757d;"></i>
										<input data-autocomplete-target="input" data-action="input->autocomplete#search" name="q" placeholder="Suche nach Felsen oder Routen..." type="search" class="form-control form-control-sm border-black text-black w-100" style="padding-left: 35px; border-top-right-radius: 0; border-bottom-right-radius: 0; border-right: none;">
									</div>
									
									<!-- Right side: Search mode selector -->
									<select data-autocomplete-target="searchMode" class="form-select form-select-sm border-black" style="width: 100px; font-size: 11px; border-top-left-radius: 0; border-bottom-left-radius: 0; border-left: none; box-shadow: none;">
										<option value="name">Route/Fels</option>
										<option value="firstascent">Erstbegeher</option>
									</select>
								</div>
								<ul class="list-group" data-autocomplete-target="results" style="display: block; position: absolute; width: 100%;"></ul>
							</div>
						</form>
					</div>
					<div class="{% if app.request.attributes.get('_route') == 'show_rock' and rocks is defined and rocks is not empty or app.request.attributes.get('_route') == 'show_rock_en' and rocks is defined and rocks is not empty %}col-2{% else %}col-2{% endif %} col-md-1 d-flex justify-content-end">
						{% if app.request.attributes.get('_route') == 'show_rock' and rocks is defined and rocks is not empty or app.request.attributes.get('_route') == 'show_rock_en' and rocks is defined and rocks is not empty  %}
							{% for rock in rocks %}
								{{ include('partials/_language_switch.html.twig', { hasTranslationDescription: hasTranslationDescription }) }}
							{% endfor %}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</nav>
</header>

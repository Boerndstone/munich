<header>
	<nav id="sidenav" class="sidenav sidenav-primary ps" data-mdb-hidden="true" data-mdb-accordion="true" style="width: 240px; height: 100vh; position: fixed; transition: all 0.3s linear 0s;">
        <a class="ripple d-flex justify-content-left p-4 text-dark" style="font-family: 'Chelsea Market', cursive;" href="{{path('frontend')}}">munichclimbs</a>
        <ul class="sidenav-menu">
            {% for area in sideBar %}
                <li class="sidenav-item">
                    <a class="sidenav-link collapsed ripple-surface" href="#sidenav-collapse-1-0-0" title="Klettergebiet {{ area.name }}" data-mdb-toggle="collapse" role="button" aria-expanded="false">
                        <picture>
                            <source srcset="https://www.munichclimbs.de/images/navigationThumbs/{{ area.image }}.webp" type="image/webp">
                            <source srcset="https://www.munichclimbs.de/images/navigationThumbs/{{ area.image }}.jpg" type="image/jpeg"> 
                            <img src="https://www.munichclimbs.de/images/navigationThumbs/{{ area.image }}.jpg" alt="Ãœbersicht Klettergebiete {{ area.name }}." class="rounded me-3" style="width: 18px; height: 18px;">
                        </picture>
                        <span class="text-truncate">{{ area.name }}</span>
                        <i class="fas fa-angle-down rotate-icon"></i>
                    </a>
                    {% if area.rocks is not empty %}
                        <ul class="sidenav-collapse collapse" id="sidenav-collapse-1-0-0">
                            {% for rock in area.rocks %}
                                <li class="sidenav-item"><a href="{{ path('show_rock', { slug: rock.slug } ) }}" title="Link zum Klettergebiet: {{ rock.name }}" class="sidenav-link ripple-surface" data-area="Konstein" data-rocks-information="{{ rock.name }}" data-banned="0">{{ rock.name }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
            <li class="sidenav-item">
                <a class="sidenav-link ripple-surface" href="/Datenschutz">
                    <i class="fas fa-chart-area fa-fw me-3"></i>
                    <span class="text-truncate">Datenschutz</span>
                </a>
            </li>
            <li class="sidenav-item">
                <a class="sidenav-link ripple-surface" href="/Impressum">
                    <i class="fas fa-chart-area fa-fw me-3"></i>
                    <span class="text-truncate">Impressum</span>
                </a>
            </li>
        </ul>
    </nav>

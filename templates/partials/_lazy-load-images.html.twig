<picture>
	{% if suffixes is defined and suffixes is not empty %}
		{% for mediaQuery, suffix in suffixes %}
			<source media="{{ mediaQuery }}" srcset="{{ asset(url ~ area.image ~ '-' ~ suffix ~ '-@1x.webp') }}, {{ asset(url ~ area.image ~ '-' ~ suffix ~ '-@2x.webp') }} 2x, {{ asset(url ~ area.image ~ '-' ~ suffix ~ '-@3x.webp') }} 3x" loading="lazy">
		{% endfor %}
	{% else %}
		<source srcset="{{ asset(url ~ area.image ~ '@1x.webp') }}, {{ asset(url ~ area.image ~ '@2x.webp') }} 2x, {{ asset(url ~ area.image ~ '@3x.webp') }} 3x" loading="lazy">
	{% endif %}
	<img class="img-fluid" src="{{ asset('https://www.munichclimbs.de/uploads/areas/' ~ area.image ~ '.webp') }}" alt="Klettergebiet {{ area.name }}" loading="lazy">
</picture>

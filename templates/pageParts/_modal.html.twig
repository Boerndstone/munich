
<div
    class="modal fade"
    tabindex="-1"
    aria-hidden="true"
    data-modal-form-target="modal"
>
    <div class="modal-dialog">
        <div class="modal-content">
            {% for rock in rocks %}
                <div class="modal-header">
                    <h5 class="modal-title">{{ rock.rockName }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="accordion" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAllgemein" aria-expanded="true" aria-controls="collapseAllgemein">
                                    Allgemein
                                </button>
                            </h2>
                            <div id="collapseAllgemein" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                                <div class="accordion-body p-0">
                                    <table class="table table-striped table-sm">
                                        <tr>
                                            <td colspan="2">
                                                <div class="d-flex me-2">
                                                    <div class="d-flex flex-column me-2">
                                                        <div class="text-center bg-warning px-2 py-1 text-white" style="font-size: 14px;">Anzahl</div>
                                                            <div class="text-center text-white bg-warning mt-1">
                                                                <div class="px-2 py-1" style="font-size: 14px;">
                                                                    {{ rock.amountRoutes }} 
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="d-flex flex-column me-2">
                                                            <div style="font-size: 14px;" class="text-center px-2 py-1 text-white bg-green" >1 - 5</div>
                                                            <div class="text-center text-white bg-gray-400 mt-1">
                                                                <div style="font-size: 14px;" class=" px-2 py-1 bg-green">{{ rock.amountEasy }}</div>
                                                            </div>	
                                                        </div>	
                                                        <div class="d-flex flex-column me-2">
                                                            <div style="background-color:#075985; font-size: 14px;" class="text-center px-2 py-1 text-white" >6 - 7</div>
                                                            <div class="text-center text-white bg-gray-400 mt-1">
                                                                <div style="background-color:#075985; font-size: 14px;" class=" px-2 py-1">{{ rock.amountMiddle }}</div>
                                                            </div>	
                                                        </div>	
                                                        <div class="d-flex flex-column me-2">
                                                            <div style="font-size: 14px;" class="text-center px-2 py-1 text-white bg-red" >8 - 11</div>
                                                            <div class="text-center text-white bg-gray-400 mt-1">
                                                                <div style="font-size: 14px;" class=" px-2 py-1 bg-red">{{ rock.amountHard }}</div>
                                                            </div>	
                                                        </div>	
                                                        <div class="d-flex flex-column me-2">
                                                            <div style="background-color:black; font-size: 14px;" class="text-center px-2 py-1 text-white" >Proj.</div>
                                                            <div class="text-center text-white bg-gray-400 mt-1">
                                                                <div style="background-color:black; font-size: 14px;" class=" px-2 py-1">{{ rock.amountProjects }}</div>
                                                            </div>	
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Höhe:</td>
                                            <td>{{ rock.rockHeight}} m</td>
                                        </tr>
                                        <tr>
                                            <td>Ausrichtung:</td>
                                            <td>{{ rock.rockOrientation }}</td>
                                        </tr>
                                        <tr>
                                            <td>Sonnig:</td>
                                            <td>
                                                {% if rock.rockSunny == 1 %}
                                                    keine Sonne
                                                {% elseif rock.rockSunny == 2 %}
                                                    teils Sonne
                                                {% else %}
                                                    sonnig
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Kindereignung:</td>
                                            <td>
                                                {% if rock.rockChild == 1 %}
                                                    gut geeignet
                                                {% elseif rock.rockChild == 2 %}
                                                    teils geeignet
                                                {% elseif rock.rockChild == 3 %}
                                                    ungeeignet
                                                {% else %}
                                                    keine Angaben
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Regengeschützt:</td>
                                            <td>
                                                {% if rock.rockRain == 1 %}
                                                    regensicher
                                                {% elseif rock.rockRain == 2 %}
                                                    kaum regensicher
                                                {% elseif rock.rockRain == 3 %}
                                                    nicht regensicher
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>GPS:</td>
                                            <td>{{ rock.rockLat }}, {{ rock.rockLng }}</td>
                                        </tr>
                                        <tr>
                                            <td>Jahreszeit:</td>
                                            <td>{{ rock.rockSeason}}</td>
                                        </tr>
                                        {% if rock.rockZone %}
                                        <tr>
                                            <td>Zone:</td>
                                            <td>{{ rock.rockZone }}</td>
                                        </tr>
                                        {% endif %}
                                    </table>
                                </div>
                            </div>
                        </div>
                        {% if rock.rockDescription %}
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBeschreibung" aria-expanded="false" aria-controls="collapseBeschreibung">
                                        Beschreibung
                                    </button>
                                </h2>
                                <div id="collapseBeschreibung" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <p class="fs-6">{{ rock.rockDescription }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {% if rock.rockAccess %}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingZustieg">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseZustieg" aria-expanded="false" aria-controls="collapseZustieg">
                                    Zustieg
                                </button>
                                </h2>
                                <div id="collapseZustieg" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    {{ rock.rockAccess }}
                                </div>
                                </div>
                            </div>
                        {% endif %}
                        {% if rock.rockNature %}
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingNaturschutz">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNaturschutz" aria-expanded="false" aria-controls="collapseNaturschutz">
                                    Naturschutz
                                </button>
                                </h2>
                                <div id="collapseNaturschutz" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    {{ rock.rockNature }}
                                </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
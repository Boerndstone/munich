{% extends 'base.html.twig' %}

{% block title %}Gebiet: {{ area.name }}{% endblock %}

{% block body %}

    <div class="container pt-12 pb-2">
        
        <h1 class="mb-5">Gebiet: {{ area.name }}</h1>
{#{dump(area.name)}#}
{{area.rocks|length}}
        {% for rock in area.rocks %}
         {{ rock.name }}
        {% endfor %}

        <table class="min-w-full leading-normal mb-10">
            <thead>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Id</td>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Name</td>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">URL</td>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Wo?</td>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Online</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ area.id }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ area.name }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ area.slug }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">{{ area.orientation }}</td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        {% if area.online == 1 %}
                            <svg viewBox="0 0 40 40" class="h-6 w-6 text-green-500 fill-current">
                                <path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM16.6667 28.3333L8.33337 20L10.6834 17.65L16.6667 23.6166L29.3167 10.9666L31.6667 13.3333L16.6667 28.3333Z"></path>
                            </svg>
                        {% else %}
                            <svg viewBox="0 0 40 40" class="h-6 w-6 fill-current">
                                <path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM16.6667 28.3333L8.33337 20L10.6834 17.65L16.6667 23.6166L29.3167 10.9666L31.6667 13.3333L16.6667 28.3333Z"></path>
                            </svg>
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="flex items-center mb-5">
            <a 
                class="inline-flex items-center h-10 px-5 text-white transition-colors duration-150 bg-yellow-400 rounded-lg focus:shadow-outline hover:bg-yellow-500 mr-5"
                role="button"
                href="{{ path('area_index') }}"
            >zurück zur Übersicht</a>
            <a 
                class="inline-flex items-center h-10 px-5 text-white transition-colors duration-150 bg-green-700 rounded-lg focus:shadow-outline hover:bg-green-800"
                role="button"
                href="{{ path('area_edit', {'id': area.id}) }}"
            >
                <svg class="w-4 h-4 mr-3 fill-current" viewBox="0 0 20 20"><path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" clip-rule="evenodd" fill-rule="evenodd"></path></svg>
                <span>Gebiet bearbeiten</span>
            </a>
        </div>

        {{ include('area/_delete_form.html.twig') }}

    </div>
{% endblock %}

{% extends 'emails/emailBase.html.twig' %}

{% block content %}
	<row class="welcome">
		<columns>
			<spacer size="35"></spacer>
			<h1>
				<center>
					Nice to meet you
					{{user.username}}
				</center>
			</h1>
			<spacer size="10"></spacer>
		</columns>
	</row>
	<spacer size="30"></spacer>
	<row>
		<columns>
			<p>
				Nice to meet you
				{{user.username}}
			</p>
		</columns>
	</row>
	<row>
		<columns>
			<center>
				<button href="{{ url('index') }}">Get writing!</button>
			</center>
		</columns>
	</row>
	<row>
		<columns>
			<table>
				<tr>
					<th>#</th>
					<th>Title</th>
					<th>Comments</th>
				</tr>
				{% for item in comments %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>{{ item.commentComment }}</td>
						<td>{{ item.routeName }}</td>
					</tr>
				{% endfor %}

			</table>
		</columns>
	</row>
	<row>
		<columns large="1">
			<p class="small-text-left">#</p>
		</columns>
		<columns large="8">
			<p class="small-text-center">Comment</p>
		</columns>
		<columns large="3">
			<p class="small-text-right">Route</p>
		</columns>
	</row>
	{% for item in comments %}
		<row>
			<columns large="1">
				<p class="small-text-left">{{ loop.index }}</p>
			</columns>
			<columns large="8">
				<p class="small-text-center">{{ item.commentComment }}</p>
			</columns>
			<columns large="3">
				<p class="small-text-right">{{ item.routeName }}</p>
			</columns>
		</row>
	{% endfor %}


{% endblock %}

{{ form_start(form) }}

    {#{ form_widget(form) }#}
    <div class="grid grid-cols-2 gap-4">
        {{ form_row(form.name) }}
        {{ form_row(form.slug) }}
        {{ form_row(form.orientation) }}
        {{ form_row(form.sequence) }}
        {{ form_row(form.online) }}
        {{ form_row(form.image) }}
        {{ form_row(form.header_image) }}
        {{ form_row(form.lat) }}
        {{ form_row(form.lng) }}
        {{ form_row(form.zoom) }}
    </div>


    <button class="inline-flex items-center h-10 px-5 text-white transition-colors duration-150 bg-green-700 rounded-lg focus:shadow-outline hover:bg-green-800">{{ button_label|default('Speichern') }}</button>


{{ form_end(form) }}

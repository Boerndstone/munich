{% form_theme form 'form/my_theme.html.twig' %}

{{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.area) }}
        {{ form_row(form.rock) }}
        {{ form_row(form.grade) }}
        {{ form_row(form.climbed) }}
        {{ form_row(form.firstAscent) }}
        {{ form_row(form.yearFirstAscent) }}
        {{ form_row(form.protection) }}
        {{ form_row(form.description) }}
        {{ form_row(form.scale) }}
        {{ form_row(form.gradeNo) }}
        {{ form_row(form.rating) }}
        {{ form_row(form.topoId) }}
        {{ form_row(form.nr) }}

        {# Important for referer so previous page!!! #}
        <input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}"/>
    <button 
        class="inline-flex items-center bg-teal-500 text-white active:bg-teal-600 font-bold uppercase text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" 
    >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-3 stroke-current" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
        </svg>
        {{ button_label|default('Speichern') }}
    </button>
{{ form_end(form) }}

<header style="height: 50px;">
    <nav class="navbar bg-white fixed-top" style="">
        <div class="container">
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <a class="offcanvas-title text-black" id="offcanvasNavbarLabel" style="font-family: 'Chelsea Market', cursive;" href="{{path('frontend')}}">munichclimbs</a>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        {% for area in sideBar %}
                            <li class="nav-item">
                                <a class="nav-link text-black" data-bs-toggle="collapse" href="#{{ area.name|custom_replace }}" title="Klettergebiet {{ area.name }}" role="button" aria-expanded="false" aria-controls="{{ area.name|custom_replace }}">
                                    <img src="https://www.munichclimbs.de/images/navigationThumbs/{{ area.image }}.webp" alt="Ãœbersicht Klettergebiete {{ area.name }}." class="rounded me-3" style="width: 18px; height: 18px;">
                                    <span class="text-truncate">{{ area.name }}</span>
                                </a>
                                <div class="collapse" id="{{ area.name|custom_replace }}">
                                {% if area.rocks is not empty %}
                                    <ol class="list-group list-group-numbered" style="margin-left: 30px">
                                        {% for rock in area.rocks %}
                                            <li class="list-group-item list-group-item-action d-flex border-0 px-2">
                                                <a href="{{ path('show_rock', { slug: rock.slug } ) }}" title="Link zum Klettergebiet: {{ rock.name }}" class="nav-link text-black py-0 d-flex justify-content-between align-items-center w-100 ms-2" data-area="Konstein" data-rocks-information="{{ rock.name }}" data-banned="0">{{ rock.name }}</a></li>
                                        {% endfor %}
                                    </ol>
                                {% endif %}
                                </div>
                            </li>
                        {% endfor %}
                        <li class="nav-item">
                            <a class="nav-link text-black " href="/Datenschutz">
                                <i class="fas fa-chart-area fa-fw me-3"></i>
                                <span class="text-truncate">Datenschutz</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black " href="/Impressum">
                                <i class="fas fa-chart-area fa-fw me-3"></i>
                                <span class="text-truncate">Impressum</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="container p-0">
                <div class="row">
                    <div class="col-3">
                        <div class="d-flex align-items-center">
                            <button class="navbar-toggler p-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                                <i class="fas fa-bars fa-xl text-black"></i>
                            </button>
                            <a class="pb-lg-1 text-dark fs-5 ms-3" style="font-family: 'Chelsea Market', cursive;" href="{{path('frontend')}}">munichclimbs</a>
                        </div>
                    </div>
                    <div class="col-9 d-flex align-items-center justify-content-end">
                        <form class="w-100">
                            <div
                                class="input-group"
                                {{ stimulus_controller('search-preview') }}
                            >
                                <input
                                    name="q"
                                    {# value="{{ searchTerm }}" #}
                                    placeholder="Finde Route..."
                                    type="search"
                                    class="form-control rounded"
                                    data-action="search-preview#onSearchInput"
                                >
                                {# <div
                                    class="search-preview"
                                    data-search-preview-target="result"
                                ></div> #}
                            </div>
                        </form>
                        <a href="{{ path('app_login') }}" title="Login" class="text-black ms-3">
                            <i class="fas fa-user-circle fs-5" ></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


<div class="example-wrapper">
    <div class="container pt-12 pb-2">
        <div class="w-1/2 bg-white rounded-lg p-8 flex flex-col mt-10 md:mt-0 mx-auto relative z-10 shadow-md">
            <h1 class="text-gray-900 text-lg mb-1 font-medium title-font">Account bearbeiten: {{ app.user.firstName }} </h1>
            {#% if error %}
                <div class="w-full bg-red-500 text-white">
                    <div class="flex justify-between items-center container mx-auto py-4 px-6">
                        <div class="flex">
                            <svg viewBox="0 0 40 40" class="h-6 w-6 fill-current">
                                <path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM21.6667 28.3333H18.3334V25H21.6667V28.3333ZM21.6667 21.6666H18.3334V11.6666H21.6667V21.6666Z"></path>
                            </svg>

                            <p class="mx-3">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>

                        <button class="rounded-md p-1 hover:bg-opacity-25 hover:bg-gray-600 focus:outline-none">
                            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 18L18 6M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </button>
                    </div>
                </div>
            {% endif %#}
            <form method="post">
                <div class="relative mb-4">
                    <label for="inputEmail" class="leading-7 text-sm text-gray-600">Name:</label>
                    <input type="email" value="{{ app.user.firstName }}" name="email" id="inputEmail" placeholder="Email address" required class="w-full bg-white rounded border border-gray-300 focus:border-none focus:ring-gray-300 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <button type="submit" class="text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded text-lg">aktualisieren</button>
            </form>
        </div>
    </div>
    


</div>
{% endblock %}
